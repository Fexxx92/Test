while True:
	print("""
	Options
	
	-Enter "add" to add two numbers
	-Enter "subtract" to subtract two numbers
	-Enter "multiply" to multiply two numbers
	-Enter "divide" to divide two numbers
	-Enter "quit" to quit to end the program
	""")
	user_input = input("""Skriv ditt val och tryck enter:
	""")
	
	if user_input == "quit":
		break
		
	elif user_input == "add":
		num1 = float(input("Enter a number: "))
		num2 = float(input("Enter another number: "))
		result = str(num1 + num2)
		print("The answer is " + result)
		
	elif user_input == "subtract":
		num1 = float(input("Enter a number: "))
		num2 = float(input("Enter another number: "))
		result = str(num1 - num2)
		print("The answer is " + result)
		
	elif user_input == "multiply":
		num1 = float(input("Enter a number: "))
		num2 = float(input("Enter another number: "))
		result = str(num1 * num2)
		print("The answer is " + result)
	
	elif user_input == "divide":
		num1 = float(input("Enter a number: "))
		num2 = float(input("Enter another number: "))
		result = str(num1 / num2)
		print("The answer is " + result)
	
	else:
		print("Unknown input")
